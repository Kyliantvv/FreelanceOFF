

<div id="modal-document" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal-document-label"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">{{ 'modal.document.title'|trans }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                {{ form_start(form, {'attr': {'id': 'form-document'}})}}
                <div class="row">
                    <div class="col-12">
                        {{ form_label(form.documentType) }}
                        {{ form_widget(form.documentType) }}
                        {{ form_errors(form.documentType) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="md-form">
                        {{ form_label(form.commentaireCle, 'document.form.commentaireCle', { 'label_attr': {'class': ' active '} }) }}
                        {{ form_widget(form.commentaireCle, {'attr': {'class': ' d-none '}} )}}
                        {{ form_errors(form.documentType) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 ">
                        <div class="md-form">
                            <div class="chips chips-commentaire-cle">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                   <div class="md-form col-12">
                        <div class="file-field">
                            <div class="btn btn-primary btn-sm float-left">
                                <span>{{ 'document.form.upload'|trans }}</span>
                                {{ form_widget(form.brochure) }}
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="{{'document.form.choose'|trans}}">
                            </div>
                            {{ form_errors(form.brochure) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2"></div>
                    {% if creation == false %}
                        <div class="col-4">
                            <button class="btn btn-danger btn-rounded btn-block mt-2 mb-0" type="button" id="btn-document-delete">{{ 'btn.delete'|trans }}</button>
                        </div>
                        <div class="col-4">
                    {% else %}
                        <div class="col-8">
                    {% endif %}
                            <button class="btn btn-primary btn-rounded btn-block mt-2 mb-0" type="submit">{{ 'btn.submit'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
