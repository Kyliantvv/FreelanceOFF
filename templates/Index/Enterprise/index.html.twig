
{% extends 'base.html.twig' %}

{% block alternates %}

    <link rel="alternate" href="{{ base_url }}/" hreflang="x-default"/>
    <link rel="alternate" href="{{ base_url }}/fr/" hreflang="fr"/>
    <link rel="alternate" href="{{ base_url }}/en/" hreflang="en"/>

{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('Index/index') }}
    {{ encore_entry_link_tags('Enterprise/enterpriseCurriculum') }}
{% endblock %}

{% block title %}{{ app.user.identity }} | {{ 'menu.brandEnterprise'|trans }}{% endblock %}

{% block navbar %}
    {% include 'Menu/Enterprise/navbar.html.twig' %}
{% endblock %}

{% block content %}
    <div class="row mastercontent">
        <div class="col-12 pt-4">
            <div class="row">
                <div class="col-lg-8 col-md-10 col-12 offset-lg-2 offset-md-1 offset-0">
                    <div class="card testimonial-card">
                        <div class="card-up indigo lighten-1">
                            <ul class="nav md-pills nav-justified pills-indigo darken-4">
                                <li class="nav-item">
                                    <a id="navProject" class="nav-link active p-10 " style="color: white;padding:40px" data-toggle="tab" href="#panelProject" role="tab">{{ 'index.project'|trans }}</a>
                                </li>
                                <li class="nav-item" id="navEC">
                                    <a id="navProject" class="nav-link p-10 " style="color: white;padding:40px" data-toggle="tab" href="#panelEnterpriseCurriculum" role="tab">{{ 'index.enterpriseCurriculum'|trans }}</a>
                                </li>
                            </ul>
                        </div>
                        <!-- Avatar -->
                        {% if app.user.avatar is not empty %}
                            <div class="avatar mx-auto white">
                                <img src="{{ app.user.avatarContent }}" class="rounded-circle" alt="{{ app.user.identity }}">
                            </div>
                        {% else %}
                            <div class="avatar mx-auto white">
                                <span class="d-flex align-items-center justify-content-center text-primary"><i class="fas fa-user fa-7x"></i></span>
                            </div>
                        {% endif %}
                        <!-- Card content -->
                        <div class="card-body">
                            <div class="tab-content pt-0">
                                <!--Panel 1-->
                                <div class="tab-pane fade in show active" id="panelProject" role="tabpanel">
                                    <div id="projects-section">
                                        <div id="projectListWidget"></div>
                                    </div>
                                </div>
                                <!--Panel 2-->
                                <div class="tab-pane fade" id="panelEnterpriseCurriculum" role="tabpanel">
                                    <div id="enterpiseCurriculum-section">
                                        <div class="col-12">
                                            <div class="row mb-4">
                                                <div class="col-12 col-12 d-flex justify-content-center">
                                                    <a id="btn-create-cv"   href="{{ path('enterprise-curriculum-form') }}" class="btn-floating btn-primary btn-lg d-flex align-items-center justify-content-center my-0" title="{{ 'index.btn.createCv'|trans }}">
                                                        <i class="fas fa-file-plus"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 p-0">
                                            <div id="enterpriseCurriculumWidget"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
    <script src="{{ path('bazinga_jstranslation_js', { 'domain': 'widget', 'locales': app.request.locale }) }}"></script>
    <script src="{{ path('bazinga_jstranslation_js', { 'domain': 'messages', 'locales': app.request.locale }) }}"></script>
    {{ encore_entry_script_tags('Project/projectList') }}
    {{ encore_entry_script_tags('Project/profileResources') }}
    {{ encore_entry_script_tags('Enterprise/enterpriseCurriculum') }}
{% endblock %}
