{% trans_default_domain 'FOSUserBundle' %}


<div class="row">
    <div class="fixed-action-btn smooth-scroll" style="top: 45px; right: 24px;">
        <a href="{{ path('index_presentation') }}" class="btn-floating btn d-flex align-items-center justify-content-center float-right mr-2 my-0">
            <i class="fal fa-times fa-2x text-black-50"></i>
        </a>
    </div>
</div>
<div class="row pt-5">
    <div class="col-12 text-center my-5">
        <p class="text-center freelanceOfficerBlack">
            FREELANCE&nbsp;
            <strong class="freelanceOfficerBlue">OF </strong>
            <strong class="freelanceOfficerRed">FIC </strong>
            <strong class="freelanceOfficerYellow">ER</strong>
        </p>
    </div>
</div>


<div class="row">
    <h1 class="col-12 text-center title">{{ 'reset.resetTitle'|trans }}</h1>
</div>

<div class="row">
    <div class="col-lg-8 col-md-10 col-12 offset-lg-2 offset-md-1 offset-0">
        <div class="card">
            <div class="card-body">
                <form action="{{ path('app_password_reset', {'token': token}) }}" method="POST" class="fos_user_resetting_reset">
                    <div class="form-group" id="fos_user_resetting_reset">
                        <div class="col-12">
                            <div class="row md-form mb-1">
                                <i class="fal fa-lock prefix"></i>
                                {{ form_label(form.plainPassword.first, 'form.new_password') }}
                                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control' } }) }}
                                {{ form_errors(form.plainPassword.first) }}
                            </div>
                            <div class="row md-form mb-1">
                                <i class="fal fa-lock prefix"></i>
                                {{ form_label(form.plainPassword.second, 'form.new_password_confirmation') }}
                                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control' } }) }}
                                {{ form_errors(form.plainPassword.second) }}
                            </div>
                            {{ form_rest(form) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1"></div>
                        <div class="col-10">
                            <button class="btn btn-primary btn-block mt-2" type="submit">{{ 'resetting.reset.submit'|trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-12 text-center">
        <a class="connect-link" href="{{ path('app_login') }}">
            {{ 'layout.login'|trans }}
        </a>
    </div>
</div>
