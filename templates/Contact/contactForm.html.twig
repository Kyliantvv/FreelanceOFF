{#{% block content %}#}

<div id="contact-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal-contact-label"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">{{ 'modal.contact.title'|trans([], 'contact') }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                {{ form_start(form, {'attr': {'id': 'contact-form'}})}}
                <div class="row">
                    <div class="col-12">
                        <div class="md-form md-outline">
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control-lg'}}) }}
                        </div>
                        {{ form_errors(form.firstName) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="md-form md-outline">
                            {{ form_label(form.lastName) }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control-lg'}}) }}
                        </div>
                        {{ form_errors(form.lastName) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="md-form md-outline">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control-lg'}}) }}
                        </div>
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="md-form">
                            {{ form_label(form.phone) }}
                            {{ form_widget(form.phone) }}
                        </div>
                        {{ form_errors(form.phone) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="md-form md-outline">
                            {{ form_label(form.comment) }}
                            {{ form_widget(form.comment, {'attr': {'class': 'form-control-lg'}}) }}
                        </div>
                        {{ form_errors(form.comment) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-3 col-sm-3"></div>
                    <div class="col mx-auto px-auto">
                        {{ form_widget(form.recaptcha) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-5">
                        <button class="btn btn-danger btn-block btn-text-normal mt-2 mb-0" type="button" data-dismiss="modal" aria-label="Close">{{ 'modal.btn.cancel'|trans([], 'contact') }}</button>
                    </div>
                    <div class="col-5">
                        <button class="btn btn-primary btn-block btn-text-normal mt-2 mb-0" type="submit">{{ 'modal.btn.send'|trans([], 'contact') }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

